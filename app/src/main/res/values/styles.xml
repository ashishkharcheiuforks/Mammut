<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppStart.Transparent" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
    </style>

    <style name="AppStart.SplashStyle" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/drawable_splash_background</item>
        <item name="android:statusBarColor">@color/standardPrimaryColor</item>
    </style>

    <style name="Mammut.Base" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">?attr/colorPrimary</item>
    </style>

    <style name="Mammut.Base.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">?attr/colorPrimary</item>
    </style>

</resources>
