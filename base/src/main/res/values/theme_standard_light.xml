<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="standardLightPrimaryColor">#ffffff</color>
    <color name="standardLightPrimaryLightColor">#ffffff</color>
    <color name="standardLightPrimaryDarkColor">#cccccc</color>
    <color name="standardLightPrimaryTransparentColor">#80CCCCCC</color>
    <color name="standardLightSecondaryColor">#03a9f4</color>
    <color name="standardLightSecondaryLightColor">#67daff</color>
    <color name="standardLightSecondaryDarkColor">#007ac1</color>
    <color name="standardLightPrimaryTextColor">#000000</color>
    <color name="standardLightSecondaryTextColor">#000000</color>
    <color name="standardLightColorControlTransparent">#33000000</color>

    <style name="Mammut.Standard.Light" parent="Mammut.Base">
        <item name="colorPrimary">@color/standardLightSecondaryColor</item>
        <item name="colorPrimaryLight">@color/standardLightSecondaryLightColor</item>
        <item name="colorPrimaryDark">@color/standardLightSecondaryColor</item>
        <item name="colorAccent">@color/standardLightSecondaryColor</item>
        <item name="colorAccentLight">@color/standardLightSecondaryLightColor</item>
        <item name="colorAccentDark">@color/standardLightSecondaryDarkColor</item>
        <item name="colorPrimaryTransparency">@color/standardLightPrimaryTransparentColor</item>
        <item name="colorControlNormal">@android:color/black</item>
        <item name="colorControlNormalTransparent">@color/standardLightColorControlTransparent</item>
    </style>
</resources>